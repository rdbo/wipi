# Contributor: Rdbo <rdbodev@gmail.com>
# Maintainer: Rdbo <rdbodev@gmail.com>
pkgname="wipi-conf"
pkgver="1.0"
pkgrel=0
pkgdesc="WiPi OS configuration files"
url="https://github.com/rdbo/wipi"
arch="noarch"
license="AGPL-3.0"
options="!check"
source="rootfs.tar.gz"
subpackages="$pkgname-fwfix"

fwfix() {
	triggers="$pkgname-fwfix.trigger=/lib/firmware/*"
	mkdir -p "$subpkgdir"
}

build() {
	return 0
}

package() {
	mkdir -p "$pkgdir"
	cp -r "$srcdir/rootfs/." "$pkgdir/."
}
